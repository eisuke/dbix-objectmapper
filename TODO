my $it = $session->search('MyTest11::Cd')
                 ->eager($artist->p('cd'))
                 ->with([ $artist->p('cd') => ])
                 ->lazy()
                 ->filter(
                    $artist->property('name') == 'Led Zeppelin',
                    $artist->property('cds')->property('title') == '',
                 )->execute;

